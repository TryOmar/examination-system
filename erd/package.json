{
    "name": "examination-system-erd",
    "version": "1.0.0",
    "description": "ERD generation for Online Examination System",
    "scripts": {
        "generate": "npm run generate:light && npm run generate:dark",
        "generate:light": "mmdc -i examination_system.mmd -o examination_system_light.png -c config-light.json -w 2000",
        "generate:dark": "mmdc -i examination_system.mmd -o examination_system_dark.png -c config-dark.json -b #000000 -w 2000",
        "generate:svg:light": "mmdc -i examination_system.mmd -o examination_system_light.svg -c config-light.json",
        "generate:svg:dark": "mmdc -i examination_system.mmd -o examination_system_dark.svg -c config-dark.json -b #000000"
    },
    "devDependencies": {
        "@mermaid-js/mermaid-cli": "^11.4.2"
    }
}